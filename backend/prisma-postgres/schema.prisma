generator client {
  provider = "prisma-client-js"
  output   = "../generated/postgresqlClient"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id         String     @id @default(uuid())
  matricule  String?
  firstName  String?
  lastName   String?
  username   String?
  email      String?
  age        Int?
  birthDate  DateTime?
  gender     String?
  address    String?
  phone      String?
  hobbies    String[]   @default([])
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  @@map("users")
}