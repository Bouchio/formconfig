// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  output = "../generated/mongoClient"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  matricule  String?
  firstName  String?
  lastName   String?
  username   String?
  email      String?
  age        Int?
  birthDate  DateTime?
  gender     String?
  address    String?
  phone      String?
  hobbies    String[]  @default([])
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  @@map("users") // Ajoute cette ligne pour mapper le modèle à la collection "users"
}